<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="310dp"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dimen_5dp">

    <androidx.cardview.widget.CardView

        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        card_view:cardBackgroundColor="@android:color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ccwatch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <ImageView
            android:scaleType="fitXY"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            android:id="@+id/imvideo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/corna"></ImageView>

            <ImageView
                android:background="@drawable/play"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="@id/imvideo"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintBottom_toBottomOf="@+id/imvideo"
                android:id="@+id/imviply"
                android:layout_width="75dp"
                android:layout_height="75dp"
               ></ImageView>

            <TextView
                android:maxLines="2"
                android:ellipsize="end"
                android:paddingRight="@dimen/dimen_25dp"
                android:id="@+id/name"
                android:text="The lockdown"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="@color/headingcolor"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toBottomOf="@id/imvideo"
                style="@style/nano_text_size"/>

            <TextView
                android:maxLines="1"
                android:ellipsize="end"
                android:paddingRight="@dimen/dimen_25dp"
                android:id="@+id/time"
                android:text="10 June 2020  |  Times of India"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#9b9b9b"
                style="@style/micro_text_size"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/name"/>

            <ImageView
                android:src="@drawable/shareblack"
                android:layout_width="@dimen/dimen_20dp"
                android:layout_height="@dimen/dimen_20dp"
                android:id="@+id/imshare"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintTop_toBottomOf="@id/name"></ImageView>

