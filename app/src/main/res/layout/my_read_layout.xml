<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_margin="@dimen/dimen_5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="310dp"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80dp"
        card_view:cardBackgroundColor="@android:color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ccwatch"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:scaleType="fitXY"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                android:id="@+id/imvideo"

                android:layout_width="@dimen/dimen_100dp"
                android:layout_height="@dimen/dimen_80dp"
                android:src="@drawable/corona"></ImageView>

            <TextView
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:paddingRight="125dp"
                android:id="@+id/name"
                android:text="Keep smiling"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                card_view:layout_constraintLeft_toRightOf="@+id/imvideo"
                card_view:layout_constraintTop_toTopOf="parent"
                android:textColor="@color/headingcolor"
                style="@style/nano_text_size"/>

         <!--   <TextView
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:id="@+id/time"
                android:text="10 June 2020"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#9b9b9b"
                style="@style/time_text_size"
                card_view:layout_constraintLeft_toRightOf="@id/imvideo"
                card_view:layout_constraintTop_toBottomOf="@+id/name"/>
        -->    <TextView
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:id="@+id/timereadnew"
                android:text="3 min. to read TED"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#9b9b9b"
                style="@style/micro_text_size"
                card_view:layout_constraintLeft_toRightOf="@id/imvideo"
                card_view:layout_constraintTop_toBottomOf="@+id/name"/>

            <TextView
                android:maxLines="1"
                android:ellipsize="end"
                android:paddingRight="@dimen/dimen_130dp"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:id="@+id/timeread"
                android:text="TED"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#9b9b9b"
                style="@style/micro_text_size"
                card_view:layout_constraintLeft_toRightOf="@id/imvideo"
                card_view:layout_constraintTop_toBottomOf="@+id/timereadnew"/>

            <ImageView

                android:src="@drawable/shareblack"
                android:layout_width="@dimen/dimen_20dp"
                android:layout_height="@dimen/dimen_20dp"
                android:id="@+id/imshare"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintTop_toBottomOf="@id/timereadnew"></ImageView>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout><!--
