<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/dimen_10dp"
    android:background="@drawable/open_background"
    android:orientation="vertical"
    android:id="@+id/sessionlink">

    <TextView
        android:id="@+id/tvWorkFromHome"
        android:layout_width="@dimen/dimen_150dp"
        android:layout_height="@dimen/dimen_70dp"
        android:padding="@dimen/dimen_10dp"
        android:textColor="#363636"
        style="@style/option_text_size"
        tools:text="Work from home" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/text_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvWFHDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:paddingStart="@dimen/dimen_10dp"
            android:paddingEnd="@dimen/dimen_5dp"
            android:paddingTop="@dimen/dimen_3dp"
            android:textColor="@android:color/white"
            style="@style/time_text_size"
            tools:text="From : 06-May-2020" />

        <TextView
            android:id="@+id/tvWFHEndDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:paddingStart="@dimen/dimen_10dp"
            android:paddingTop="@dimen/dimen_2dp"
            android:paddingBottom="@dimen/dimen_3dp"
            android:paddingEnd="@dimen/dimen_5dp"
            style="@style/time_text_size"
            android:textColor="@android:color/white"
            tools:text="To : 06-May-2020" />

    </LinearLayout>
</LinearLayout>