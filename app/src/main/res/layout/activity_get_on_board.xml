<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/registration"
    tools:context=".activity.onboard.GetOnBoard">

    <TextView
        android:id="@+id/tvready"
        android:text="You are ready to go!"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_30sp"
        android:layout_marginTop="@dimen/dimen_50dp"
        android:fontFamily="@font/nunito_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>

    <TextView
        android:text="Have a great journey!"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_18sp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:fontFamily="@font/nunito_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvready"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>
    <Button
        android:layout_marginLeft="@dimen/dimen_50dp"
        android:layout_marginRight="@dimen/dimen_50dp"
        android:layout_marginBottom="@dimen/dimen_30dp"
        android:background="@drawable/whitestroke"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ivNext"
        android:id="@+id/btnhelp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Help us know you better"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_20sp"
        android:fontFamily="@font/nunito_bold"/>
    <Button
        android:layout_margin="@dimen/dimen_50dp"
        android:background="@drawable/grey_gradiant"
        android:backgroundTint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/ivNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="get onboard"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/dimen_18sp"
        android:fontFamily="@font/nunito_bold"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>